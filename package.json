{
  "name": "apx-workspace",
  "version": "1.0.0",
  "scripts": {
    "ng": "ng",
    "start": "ng serve",
    "build": "ng build",
    "watch": "ng build --watch --configuration development",
    "ngTest": "ng test",
    "test": "vitest",
    "test:run": "vitest run",
    "lint": "ng lint",
    "apx-formulario:lint": "ng lint ui",
    "sync-readmes": "bun run sync-ui-readme",
    "sync-ui-readme": "cp README.md projects/ui/README.md",
    "clean": "rimraf dist && ng cache clean",
    "ui:build": "bun run clean && ng build ui",
    "ui:test-build": "bun run test:run && bun run ui:build",
    "publish-ui": "npm publish dist/ui/ --access public",
    "build-and-publish": "ng build ui && npm publish dist/ui/ --access public"
  },
  "prettier": {
    "overrides": [
      {
        "files": "*.html",
        "options": {
          "parser": "angular"
        }
      }
    ]
  },
  "private": true,
  "dependencies": {
    "@analogjs/platform": "^2.0.4",
    "@analogjs/vite-plugin-angular": "^2.0.4",
    "@analogjs/vitest-angular": "^2.0.4",
    "@angular/cdk": "20.2.9",
    "@angular/common": "^20.0.0",
    "@angular/compiler": "^20.0.0",
    "@angular/core": "^20.0.0",
    "@angular/forms": "^20.0.0",
    "@angular/material": "20.2.9",
    "@angular/platform-browser": "^20.0.0",
    "@angular/router": "^20.0.0",
    "jsdom": "^27.1.0",
    "rxjs": "~7.8.0",
    "tslib": "^2.3.0",
    "vitest": "^4.0.8"
  },
  "devDependencies": {
    "@angular-eslint/builder": "20.5.2",
    "@angular/build": "^20.3.6",
    "@angular/cli": "^20.0.5",
    "@angular/compiler-cli": "^20.0.0",
    "@eslint/js": "^9.39.0",
    "@types/jasmine": "~5.1.0",
    "angular-eslint": "20.5.2",
    "eslint": "^9.39.0",
    "jasmine-core": "~5.7.0",
    "ng-packagr": "^20.3.0",
    "rimraf": "^6.1.0",
    "typescript": "~5.8.2",
    "typescript-eslint": "8.46.3"
  }
}